<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Action classes -->
        <parameter key="elao_html_action.action.list.class">Elao\Bundle\HtmlActionBundle\Action\ListAction</parameter>
        <parameter key="elao_html_action.action.read.class">Elao\Bundle\HtmlActionBundle\Action\ReadAction</parameter>
        <parameter key="elao_html_action.action.form.class">Elao\Bundle\HtmlActionBundle\Action\FormAction</parameter>
        <parameter key="elao_html_action.action.create.class">Elao\Bundle\HtmlActionBundle\Action\CreateAction</parameter>
        <parameter key="elao_html_action.action.update.class">Elao\Bundle\HtmlActionBundle\Action\UpdateAction</parameter>
        <parameter key="elao_html_action.action.delete.class">Elao\Bundle\HtmlActionBundle\Action\DeleteAction</parameter>

        <!-- Action configuration classes -->
        <parameter key="elao_html_action.action_configuration.list.class">Elao\Bundle\HtmlActionBundle\DependencyInjection\ActionConfiguration\ListActionConfiguration</parameter>
        <parameter key="elao_html_action.action_configuration.read.class">Elao\Bundle\HtmlActionBundle\DependencyInjection\ActionConfiguration\ReadActionConfiguration</parameter>
        <parameter key="elao_html_action.action_configuration.create.class">Elao\Bundle\HtmlActionBundle\DependencyInjection\ActionConfiguration\CreateActionConfiguration</parameter>
        <parameter key="elao_html_action.action_configuration.update.class">Elao\Bundle\HtmlActionBundle\DependencyInjection\ActionConfiguration\UpdateActionConfiguration</parameter>
        <parameter key="elao_html_action.action_configuration.delete.class">Elao\Bundle\HtmlActionBundle\DependencyInjection\ActionConfiguration\DeleteActionConfiguration</parameter>
    </parameters>

    <services>
        <!-- List action -->
        <service id="elao_html_action.action.list" class="%elao_html_action.action.list.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="list" configuration="%elao_html_action.action_configuration.list.class%" />
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="knp_paginator" />
        </service>

        <!-- Read action -->
        <service id="elao_html_action.action.read" class="%elao_html_action.action.read.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="read" configuration="%elao_html_action.action_configuration.read.class%"/>
            <argument type="service" id="templating" />
        </service>

        <!-- Form Abstract Action -->
        <service id="elao_html_action.action.form" parent="elao_admin.action" abstract="true">
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="elao_admin.notifier" />
        </service>

        <!-- Form actions -->
        <service id="elao_html_action.action.create" class="%elao_html_action.action.create.class%" parent="elao_html_action.action.form" abstract="true">
            <tag name="elao_admin.action" alias="create" configuration="%elao_html_action.action_configuration.create.class%"/>
        </service>

        <service id="elao_html_action.action.update" class="%elao_html_action.action.update.class%" parent="elao_html_action.action.form" abstract="true">
            <tag name="elao_admin.action" alias="update" configuration="%elao_html_action.action_configuration.update.class%"/>
        </service>

        <service id="elao_html_action.action.delete" class="%elao_html_action.action.delete.class%" parent="elao_html_action.action.form" abstract="true">
            <tag name="elao_admin.action" alias="delete" configuration="%elao_html_action.action_configuration.delete.class%"/>
        </service>
    </services>
</container>
